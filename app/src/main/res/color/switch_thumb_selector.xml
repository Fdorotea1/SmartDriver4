<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ON -->
    <item android:state_enabled="true" android:state_checked="true"
        android:color="@color/switch_on_thumb"/>
    <!-- ON + disabled -->
    <item android:state_enabled="false" android:state_checked="true"
        android:alpha="0.5" android:color="@color/switch_on_thumb"/>

    <!-- OFF -->
    <item android:state_enabled="true" android:state_checked="false"
        android:color="@color/switch_off_thumb"/>
    <!-- OFF + disabled -->
    <item android:state_enabled="false"
        android:alpha="0.5" android:color="@color/switch_off_thumb"/>
</selector>
