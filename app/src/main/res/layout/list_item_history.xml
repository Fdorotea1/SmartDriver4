<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginBottom="6dp"
    android:background="?android:attr/selectableItemBackground" > <!-- Efeito visual ao clicar -->

    <!-- Linha 1: Início e Duração -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/textViewStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Início: DD/MM HH:MM"
            android:textSize="13sp"
            android:textColor="@color/gray_inactive"/>

        <TextView
            android:id="@+id/textViewDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duração: XXm XXs"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>

    <!-- Linha 2: Valor, €/h Real, €/km Inicial -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewOfferValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:text="Valor: -- €"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textViewFinalVph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="€/h Real: --"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textViewInitialVpk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:gravity="end"
            android:text="€/km Ini: --"
            android:textSize="14sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <!-- Linha 3: Distância Inicial e Tipo Serviço -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewInitialDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dist Ini: -- km"
            android:textSize="12sp"
            android:textColor="@color/gray_inactive"/>
        <TextView
            android:id="@+id/textViewServiceType"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="-"
            android:textSize="12sp"
            android:textColor="@color/gray_inactive"/>
    </LinearLayout>

</LinearLayout>