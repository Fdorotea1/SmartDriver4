<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="360dp"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:padding="12dp"
    android:elevation="8dp"
    tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" >

    <TextView
        android:id="@+id/menu_item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_main_screen"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:drawablePadding="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@android:drawable/ic_menu_manage" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>

    <TextView
        android:id="@+id/menu_item_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_history"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:drawablePadding="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@android:drawable/ic_menu_recent_history"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- ============== HUD DONUTS + SLIDER DA META ============== -->
    <!-- Chip de estado do turno -->
    <TextView
        android:id="@+id/textShiftStateChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Em pausa"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="6dp"
        android:background="#803A3A3A"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/hudDonuts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="4dp"
        android:paddingBottom="8dp">

        <!-- Linha 1: Tempo & Meta (€) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:measureWithLargestChild="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.example.smartdriver.ui.widgets.DonutProgressView
                    android:id="@+id/donutTime"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempo"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.example.smartdriver.ui.widgets.DonutProgressView
                    android:id="@+id/donutGoal"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meta"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Slider da Meta (ajusta € alvo) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/textGoalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shift_target_label"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"/>

            <TextView
                android:id="@+id/textGoalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="130,00 €"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorPrimary"
                tools:text="130,00 €"/>

            <SeekBar
                android:id="@+id/seekBarGoal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="500"
                android:progress="130"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"/>
        </LinearLayout>

        <!-- Linha 2: Média €/h & Fim Previsto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:measureWithLargestChild="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.example.smartdriver.ui.widgets.DonutProgressView
                    android:id="@+id/donutAverage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Média"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.example.smartdriver.ui.widgets.DonutProgressView
                    android:id="@+id/donutEta"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fim"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- ============== /HUD DONUTS ============== -->

    <!-- Blocos antigos (mantidos p/ IDs que o código usa, mas ocultos) -->
    <TextView
        android:id="@+id/textViewShiftStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:textColor="?android:attr/textColorSecondary"
        tools:text="Turno Pausado"
        android:text="@string/shift_status_none"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shift_timer_label"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:id="@+id/textViewShiftTimer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="01:23:45"
            android:text="00:00:00"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shift_time_to_target_label"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:id="@+id/textViewTimeToTarget"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="02:30:00"
            android:text="--:--:--"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shift_average_label"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:id="@+id/textViewShiftAveragePerHour"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="15.8 €/h"
            android:text="-- €/h"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shift_target_label"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:id="@+id/textViewShiftTarget"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:text="-- €"
            tools:text="100,00 €"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expected_end_time_label"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:id="@+id/textViewExpectedEndTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:text="--:--"
            tools:text="17:24"/>
    </LinearLayout>

    <!-- Botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonShiftToggle"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="@string/shift_action_start"/>

        <Button
            android:id="@+id/buttonShiftEnd"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="@string/shift_action_end"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/menu_item_shutdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_shutdown"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:drawablePadding="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"/>
</LinearLayout>
