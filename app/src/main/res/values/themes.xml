<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base da aplicação -->
    <style name="Theme.SmartDriver" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primárias -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secundárias -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar por defeito -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Personalizações -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_inactive</item>
        <item name="android:textColorSecondary">@color/gray_inactive</item>
        <item name="android:listDivider">@color/gray_divider</item>
        <item name="colorError">@color/button_end</item>
    </style>

    <!-- Splash (Android 12+ + compat) — fundo e barras a preto, sem logo -->
    <style name="Theme.SmartDriver.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_transparent_icon</item>

        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- ⚠️ Mantém a SplashActivity totalmente preta DURANTE a animação -->
        <item name="postSplashScreenTheme">@style/Theme.SmartDriver.SplashRuntime</item>
    </style>

    <!-- Tema usado pela SplashActivity depois do splash do sistema (totalmente preto) -->
    <style name="Theme.SmartDriver.SplashRuntime" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryVariant">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <!-- Diálogo transparente -->
    <style name="Theme.SmartDriver.TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Helpers do template -->
    <style name="Theme.SmartDriver.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.SmartDriver.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SmartDriver.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Tema com barras pretas -->
    <style name="Theme.SmartDriver.BlackBar" parent="Theme.SmartDriver">
        <item name="actionBarStyle">@style/SmartActionBar.Black</item>
        <item name="colorPrimary">@color/sd_black</item>
        <item name="colorOnPrimary">@color/sd_white</item>
        <item name="android:statusBarColor">@color/sd_black</item>
        <item name="android:navigationBarColor">@color/sd_black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- ActionBar preta -->
    <style name="SmartActionBar.Black" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/sd_black</item>
        <item name="titleTextStyle">@style/SmartActionBarTitle.White</item>
        <item name="subtitleTextStyle">@style/SmartActionBarSubtitle.White</item>
    </style>

    <style name="SmartActionBarTitle.White" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/sd_white</item>
    </style>

    <style name="SmartActionBarSubtitle.White" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/sd_white</item>
    </style>

    <!-- NOTA: Theme.SmartDriver.MapOverlay continua em values/styles-map.xml -->
</resources>
