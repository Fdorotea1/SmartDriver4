<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base da aplicação (mantém) -->
    <style name="Theme.SmartDriver" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primárias atuais -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secundárias atuais -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar: por defeito usa Variant -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Personalizações várias já existentes -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_inactive</item>
        <item name="android:textColorSecondary">@color/gray_inactive</item>
        <item name="android:listDivider">@color/gray_divider</item>
        <item name="colorError">@color/button_end</item>
    </style>

    <!-- Splash sem ActionBar -->
    <style name="Theme.SmartDriver.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <!-- Ex.: <item name="android:statusBarColor">@color/white</item> -->
    </style>

    <!-- Diálogo transparente -->
    <style name="Theme.SmartDriver.TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Helpers gerados pelo template -->
    <style name="Theme.SmartDriver.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.SmartDriver.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SmartDriver.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- =================== NOVO: Tema com barras PRETAS =================== -->
    <style name="Theme.SmartDriver.BlackBar" parent="Theme.SmartDriver">
        <!-- ActionBar preta com texto/ícones brancos -->
        <item name="actionBarStyle">@style/SmartActionBar.Black</item>
        <!-- Para Toolbars Material (se presentes) -->
        <item name="colorPrimary">@color/sd_black</item>
        <item name="colorOnPrimary">@color/sd_white</item>

        <!-- StatusBar e Navigation bar pretas com ícones claros -->
        <item name="android:statusBarColor">@color/sd_black</item>
        <item name="android:navigationBarColor">@color/sd_black</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- (Opcional) <item name="android:windowLightNavigationBar">false</item> -->
    </style>

    <!-- ActionBar preta -->
    <style name="SmartActionBar.Black" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/sd_black</item>
        <item name="titleTextStyle">@style/SmartActionBarTitle.White</item>
        <item name="subtitleTextStyle">@style/SmartActionBarSubtitle.White</item>
    </style>

    <style name="SmartActionBarTitle.White" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/sd_white</item>
    </style>

    <style name="SmartActionBarSubtitle.White" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/sd_white</item>
    </style>

</resources>
