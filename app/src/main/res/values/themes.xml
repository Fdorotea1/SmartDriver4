<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base da aplicação (modo diurno/light) -->
    <style name="Theme.SmartDriver" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Cores primárias (ActionBar, etc.) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Cores secundárias (Widgets como FloatingActionButton) -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Cor da barra de status -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- === PERSONALIZAÇÕES DE COR SOLICITADAS === -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_inactive</item>
        <item name="android:textColorSecondary">@color/gray_inactive</item>
        <item name="android:listDivider">@color/gray_divider</item>
        <!-- Adiciona colorError aqui para que ?attr/colorError funcione -->
        <item name="colorError">@color/button_end</item> <!-- Exemplo: usando a cor do botão "End" para erros -->
    </style>

    <!-- Tema para a Splash Screen (sem ActionBar e fundo branco) -->
    <style name="Theme.SmartDriver.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <!-- Opcional: Garante que a status bar também combine, se necessário -->
        <!-- <item name="android:statusBarColor">@color/white</item> -->
        <!-- <item name="android:windowLightStatusBar" tools:targetApi="m">true</item> -->
    </style>

    <!-- Tema para o Diálogo Transparente da Meta -->
    <style name="Theme.SmartDriver.TransparentDialog" parent="Theme.AppCompat.Dialog"> <!-- Ou Theme.MaterialComponents.Dialog -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item> <!-- Escurece o fundo -->
    </style>


    <!-- Estilos padrão do Android Studio (geralmente para ActionBar) -->
    <style name="Theme.SmartDriver.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.SmartDriver.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SmartDriver.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>