<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base da aplicação (modo diurno/light) -->
    <style name="Theme.SmartDriver" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Cores primárias (ActionBar, etc.) - Mantendo padrão por agora -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Cores secundárias (Widgets como FloatingActionButton) - Mantendo padrão -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Cor da barra de status -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- === PERSONALIZAÇÕES DE COR SOLICITADAS === -->

        <!-- Cor de fundo padrão das janelas/telas -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Cor de fundo geral (usada por alguns componentes) -->
        <item name="android:colorBackground">@color/white</item>

        <!-- Cor padrão do texto -->
        <item name="android:textColor">@color/black</item>

        <!-- Cor para hints (textos de dica em EditTexts, etc.) e pode ser usada para texto inativo -->
        <item name="android:textColorHint">@color/gray_inactive</item>

        <!-- Cor secundária do texto (geralmente um pouco mais clara ou cinza) -->
        <item name="android:textColorSecondary">@color/gray_inactive</item>

        <!-- Opcional: Cor para divisórias -->
        <item name="android:listDivider">@color/gray_divider</item>

    </style>
    <!-- Tema para a Splash Screen (sem ActionBar e fundo branco) -->
    <style name="Theme.SmartDriver.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <!-- Opcional: Garante que a status bar também combine, se necessário -->
        <!-- <item name="android:statusBarColor">@color/white</item> -->
        <!-- <item name="android:windowLightStatusBar" tools:targetApi="m">true</item> -->
    </style>

    <!-- O Android Studio pode gerar um tema aqui para a ActionBar inicial. Pode deixar como está. -->
    <style name="Theme.SmartDriver.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.SmartDriver.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SmartDriver.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>